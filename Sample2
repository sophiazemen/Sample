// Lab2.c
#include <stdio.h>

int main() {
    int num1, num2, product;

    // Asking the user for input
    printf("Enter first number: ");
    scanf("%d", &num1);

    printf("Enter second number: ");
    scanf("%d", &num2);

    // Performing multiplication
    product = num1 * num2;

    // Displaying the result
    printf("The product of %d and %d is %d.\n", num1, num2, product);

    return 0;
}
